{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions" : [
        {
            "name" : "client",
            "image" : "lojeda2024/multi-client",
            "hostname" : "client",
            "essential" : false
        },
        {
            "name" : "server",
            "image" : "lojeda2024/multi-server",
            "hostname" : "api",
            "essential" : false
        },
        {
            "name" : "worker",
            "image" : "lojeda2024/multi-worker",
            "hostname" : "worker",
            "essential" : false
        },
        {
            "name" : "nginx",
            "image" : "lojeda2024/multi-nginx",
            "hostname" : "nginx",
            "essential" : true,
            "portMappings" : [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ], 
            "links": ["client", "server"]
        }
    ]
}